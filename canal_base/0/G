FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [mass/time^3];

internalField   uniform 0;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           $internalField;
    }
    outlet
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           $internalField;
    }
    canal_wall
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           $internalField;
    }
    step
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           $internalField;
    }
    plane_symmetry_z
    {
        type            symmetryPlane;
    }
    plane_symmetry_y
    {
        type            symmetryPlane;
    }
}


