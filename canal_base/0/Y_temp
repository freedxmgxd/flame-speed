FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      ${MOLECULE};
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [];

internalField   uniform ${initial_concentration};

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            fixedValue;
        value           uniform ${initial_concentration};
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform ${concentration_extern}; // $internalField;
        value           uniform ${concentration_extern}; // $internalField;

    }
    canal_wall
    {
        type            zeroGradient;
    }
    step
    {
        type            zeroGradient;
    }
    plane_symmetry_z
    {
        type            symmetryPlane;
    }
    plane_symmetry_y
    {
        type            symmetryPlane;
    }
}


