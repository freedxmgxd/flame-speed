FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvModels;
}

// Definição da Fonte de Ignição
sparkIgnition
{
    // Tipo específico para adição de energia térmica
    type            heatSource;
    
    // Controle de ativação global
    active          on;

    // Seleção da região geométrica criada pelo topoSet
    selectionMode   cellZone;
    cellZone        ignitionZone;

    Q
    {
        type        scale;
        scale       squarePulse;
        start       ${time_start_ignition};
        duration    0.02;
        value       20;
    }

}


radiation
{
    type    radiation;
    active  off;
    libs    ("libradiationModels.so");
}


